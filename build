<script>
/* =====================
   PRICES - ch·ªânh ·ªü ƒë√¢y n·∫øu c·∫ßn
   ===================== */
const PRICES = {
  domains: {
    ".com": 250000,
    ".vn": 450000,
    ".shop": 75000,
    ".net": 350000
  },
  hosting: [
    { id:'AN1', label:'AN1 ‚Äî 8.000ƒë / th√°ng', price:8000 },
    { id:'AN2', label:'AN2 ‚Äî 16.000ƒë / th√°ng', price:16000 },
    { id:'AN3', label:'AN3 ‚Äî 24.000ƒë / th√°ng', price:24000 },
    { id:'AN4', label:'AN4 ‚Äî 32.000ƒë / th√°ng', price:32000 }
  ],
  apiPrice: 35000,
  designFee: 300000,
  bank: {
    name: 'Techcombank',
    account: '19073015796012',
    holder: 'L√ä VƒÇN LINH'
  }
};

/* =====================
   DOM refs
   ===================== */
const tldSelect = document.getElementById('tldSelect');
const hostingSelect = document.getElementById('hostingSelect');
const calcBtn = document.getElementById('calcBtn');
const checkBtn = document.getElementById('checkBtn');
const apiChk = document.getElementById('apiChk');
const domainInput = document.getElementById('domainInput');

const breakdown = document.getElementById('breakdown');
const brDomain = document.getElementById('br-domain');
const brHost = document.getElementById('br-host');
const brApiRow = document.getElementById('br-api-row');
const brApi = document.getElementById('br-api');
const brFullDomain = document.getElementById('br-full-domain');
const brTotal = document.getElementById('br-total');

const qrImg = document.getElementById('qrImg');
const toast = document.getElementById('toast');

/* ========== init selects ========== */
function init() {
  // fill domain options
  Object.entries(PRICES.domains).forEach(([tld, price])=>{
    const opt = document.createElement('option');
    opt.value = tld;
    opt.dataset.price = price;
    opt.textContent = `${tld} ‚Äî ${price.toLocaleString()} ƒë / nƒÉm`;
    tldSelect.appendChild(opt);
  });
  // fill hosting
  PRICES.hosting.forEach(h=>{
    const opt = document.createElement('option');
    opt.value = h.price;
    opt.textContent = `${h.label}`;
    hostingSelect.appendChild(opt);
  });

  // set design fee displayed (readonly already)
  const designFeeInput = document.getElementById('designFee');
  designFeeInput.value = PRICES.designFee.toLocaleString() + ' ƒë';
}
init();

/* ========== toast ========== */
function showToast(msg, ok=true){
  toast.textContent = msg;
  toast.style.background = ok ? '#071617' : '#3a1414';
  toast.classList.add('show');
  toast.style.display = 'block';
  clearTimeout(window._t);
  window._t = setTimeout(()=>{ toast.classList.remove('show'); toast.style.display='none'; }, 2200);
}

/* ========== copy bank fields ========== */
document.querySelectorAll('.copy-target').forEach(el=>{
  el.addEventListener('click', ()=>{
    const text = el.getAttribute('data-copy');
    navigator.clipboard.writeText(text).then(()=>{
      el.classList.add('copied');
      setTimeout(()=>el.classList.remove('copied'),700);
      showToast('‚úÖ ƒê√£ copy: ' + text);
    }).catch(err=>{
      console.error('copy fail', err);
      showToast('‚ùå Kh√¥ng copy ƒë∆∞·ª£c', false);
    });
  });
});

/* ========== calculate ========== */
calcBtn.addEventListener('click', ()=>{
  const name = (domainInput.value || '').trim();
  if(!name){ showToast('‚ö†Ô∏è Vui l√≤ng nh·∫≠p ph·∫ßn tr∆∞·ªõc t√™n mi·ªÅn', false); return; }

  const tldOption = tldSelect.options[tldSelect.selectedIndex];
  const tld = tldOption.value;
  const tldPrice = parseInt(tldOption.dataset.price || 0);

  const hostingPrice = parseInt(hostingSelect.value || 0);
  const apiPrice = apiChk.checked ? PRICES.apiPrice : 0;

  const total = PRICES.designFee + tldPrice + hostingPrice + apiPrice;

  // show breakdown
  breakdown.style.display = 'block';
  brDomain.textContent = `${tld} ‚Äî ${tldPrice.toLocaleString()} ƒë`;
  brHost.textContent = hostingPrice.toLocaleString() + ' ƒë';
  if(apiPrice){
    brApiRow.style.display = 'flex';
    brApi.textContent = apiPrice.toLocaleString() + ' ƒë';
  } else {
    brApiRow.style.display = 'none';
  }
  brFullDomain.textContent = `${name}${tld}`;
  brTotal.textContent = `T·ªïng th√°ng ƒë·∫ßu: ${total.toLocaleString()} ƒë`;

  // create/update pay button
  createOrUpdatePayButton(total, `${name}${tld}`);
});

/* ========== create/update pay button ========== */
function createOrUpdatePayButton(amount, fullDomain){
  // if button exists remove to replace (so handler updates)
  let existing = document.getElementById('payNowBtn');
  if(existing) existing.remove();

  const btn = document.createElement('button');
  btn.id = 'payNowBtn';
  btn.className = 'btn btn-primary';
  btn.textContent = 'Thanh To√°n (Sinh QR)';
  btn.style.marginTop = '12px';
  // place after breakdown
  breakdown.insertAdjacentElement('afterend', btn);
  btn.addEventListener('click', ()=> generateQR(amount, fullDomain));
  showToast('üîî ƒê√£ t√≠nh xong ‚Äî b·∫•m "Thanh To√°n (Sinh QR)" ƒë·ªÉ t·∫°o m√£.');
}

/* ========== generate QR ==========
   Using img.vietqr.io pattern (public).
   We encode addInfo to include domain and note.
==================================*/
function generateQR(amount, fullDomain){
  const account = PRICES.bank.account;
  const amt = Math.round(amount);
  const addInfo = encodeURIComponent(`ThanhToan ${fullDomain}`);
  const url = `https://img.vietqr.io/image/Techcombank-${account}-compact2.png?amount=${amt}&addInfo=${addInfo}`;
  qrImg.src = url;
  qrImg.style.display = 'block';
  showToast(`‚úÖ QR t·∫°o cho ${amt.toLocaleString()} ƒë`);
}

/* ========== domain RDAP check ========== */
const checkBtnEl = document.getElementById('checkBtn');
checkBtnEl.addEventListener('click', async ()=>{
  const name = (domainInput.value || '').trim();
  if(!name){ showToast('‚ö†Ô∏è Vui l√≤ng nh·∫≠p ph·∫ßn tr∆∞·ªõc t√™n mi·ªÅn', false); return; }
  const tld = tldSelect.value;
  const full = name + tld;
  showToast('ƒêang ki·ªÉm tra mi·ªÅn...');
  try{
    const res = await fetch('https://rdap.org/domain/' + encodeURIComponent(full), {mode:'cors'});
    if(res.status === 200){
      showToast('‚ùå T√™n mi·ªÅn ƒë√£ c√≥ ng∆∞·ªùi s·ªü h·ªØu', false);
    } else if(res.status === 404){
      showToast('‚úÖ T√™n mi·ªÅn kh·∫£ d·ª•ng ƒë·ªÉ ƒëƒÉng k√Ω!');
    } else {
      showToast(`‚ö†Ô∏è K·∫øt qu·∫£ kh√¥ng r√µ (HTTP ${res.status})`, false);
    }
  } catch(err){
    console.warn('rdap err', err);
    showToast('‚ö†Ô∏è Kh√¥ng th·ªÉ ki·ªÉm tra mi·ªÅn (c√≥ th·ªÉ b·ªã CORS). B√°o admin ƒë·ªÉ h·ªó tr·ª£ proxy.', false);
  }
});

/* accessibility: Enter triggers calc */
domainInput.addEventListener('keydown', e => { if(e.key === 'Enter'){ e.preventDefault(); calcBtn.click(); } });

/* make sure bank copy-targets have data-copy attr (in case) */
document.querySelectorAll('.copy-target').forEach(el=>{
  if(!el.getAttribute('data-copy')){
    const text = el.textContent.trim();
    el.setAttribute('data-copy', text);
  }
});
</script>
</body>
</html>
